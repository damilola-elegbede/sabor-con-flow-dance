{
  "version": 2,
  "env": {
    "DJANGO_DEBUG": "False",
    "SECRET_KEY": "@secret-key",
    "TURSO_DATABASE_URL": "@turso-database-url",
    "TURSO_AUTH_TOKEN": "@turso-auth-token"
  },
  "build": {
    "env": {
      "DJANGO_DEBUG": "False",
      "SECRET_KEY": "@secret-key",
      "TURSO_DATABASE_URL": "@turso-database-url",
      "TURSO_AUTH_TOKEN": "@turso-auth-token"
    }
  },
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "staticfiles/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/favicon.ico",
      "destination": "/staticfiles/favicon.ico"
    },
    {
      "source": "/static/(.*)",
      "destination": "/staticfiles/$1"
    },
    {
      "source": "/media/(.*)",
      "destination": "/staticfiles/media/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.py"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/staticfiles/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}

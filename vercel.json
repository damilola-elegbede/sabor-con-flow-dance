{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/robots.txt",
      "dest": "/staticfiles/robots.txt"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/api/index.py"
    },
    {
      "src": "/favicon.(ico|png|jpg|jpeg|gif|svg)",
      "dest": "/staticfiles/images/favicon/favicon.png"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ]
}
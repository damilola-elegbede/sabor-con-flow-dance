# Environment Configuration Template - SPEC_06 Group D Task 10
# Copy this file to .env and fill in your actual values

# Django Core Settings
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production
ENVIRONMENT=production

# Database Configuration (Turso/LibSQL)
TURSO_DATABASE_URL=libsql://your-database-url.turso.io
TURSO_AUTH_TOKEN=your-auth-token-here

# Cache Configuration (Redis)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (SendGrid/SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@saborconflowdance.com

# External API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Vercel Deployment (for CI/CD)
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# Security Settings
ALLOWED_HOSTS=saborconflowdance.com,www.saborconflowdance.com,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://saborconflowdance.com,https://www.saborconflowdance.com

# Performance Settings
USE_REDIS_CACHE=True
CACHE_TTL=3600
STATIC_ROOT=/staticfiles/

# Monitoring and Analytics - SPEC_06 Group C Task 9
SENTRY_DSN=your-sentry-dsn-for-error-tracking
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=sabor-con-flow@1.0.0
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Error Tracking and Monitoring
ENABLE_MONITORING=True
MONITORING_ALERT_EMAIL=admin@saborconflowdance.com

# UptimeRobot Configuration
UPTIMEROBOT_API_KEY=your-uptimerobot-api-key
UPTIMEROBOT_MONITOR_URL=https://your-domain.vercel.app/health/

# Performance Monitoring Thresholds
PERF_RESPONSE_TIME_WARNING=1000
PERF_RESPONSE_TIME_CRITICAL=3000
PERF_ERROR_RATE_WARNING=5.0
PERF_ERROR_RATE_CRITICAL=10.0
PERF_CPU_WARNING=80
PERF_MEMORY_WARNING=85
PERF_DISK_WARNING=90

# Alert Channels
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_ALERT_CHANNEL=#alerts

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_CACHE_TTL=60
APP_VERSION=1.0.0

# Feature Flags
ENABLE_CACHING=True
ENABLE_COMPRESSION=True
ENABLE_DEBUG_TOOLBAR=False

# Development-only settings (set to False in production)
DEBUG_SQL_QUERIES=False
ENABLE_PROFILING=False
<div class="container main-content-events">
    <h1 class="page-title" data-animate="fade-down" data-text-reveal="lines">Our Classes</h1>

    <p style="text-align: center; margin-bottom: 2rem; color: #ffffff;" data-animate="fade-up" data-delay="100">All classes can also be found on <a href="https://pasito.fun/u/daelegbe" target="_blank" rel="noopener noreferrer" style="color: #C7B375; text-decoration: none;">pasito.fun</a>.</p>

    <div class="event-container">
        <% events.forEach((event, index) => { %>
        <div class="event-card" data-animate="fade-up" data-delay="<%= Math.min(index * 100, 500) %>">
            <h2 class="event-title"><%= event.title %></h2>
            <div class="event-date">
                <span class="event-icon">üìÖ</span>
                <span><%= event.date %></span>
            </div>
            <div class="event-time">
                <span class="event-icon">‚è∞</span>
                <span><%= event.time %></span>
            </div>
            <div class="event-location">
                <span class="event-icon">üìç</span>
                <span><a href="https://boulderdance.org/" target="_blank" rel="noopener noreferrer" style="color: #C7B375; text-decoration: none;"><%= event.location %></a></span>
            </div>
            <div class="event-description">
                <p><%= event.description %></p>
            </div>
            <div class="event-pricing">
                <h3>Pricing</h3>
                <ul>
                    <li>Drop-in: $<%= event.price %></li>
                    <li>Monthly: $<%= event.monthly_price %></li>
                </ul>
            </div>
        </div>
        <% }) %>
    </div>
</div>